<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form"
	controllerName="smud.pm.ZPM_RPDS_INVESTIGATIONS.controller.Create" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Title" showNavButton="true" navButtonPress="goBack" >
				<content>
					<VBox class="sapUiSmallMargin">
						<f:SimpleForm id="createForm" editable="true" layout="ResponsiveGridLayout" title="Create Investigation">
							<f:content>
								<HBox>
									<VBox>
										<Label text="Notification Text"/>
										<Input id="ntxt" enabled="false" value="Power Theft Investigation"/>
										<Label text="Equipment Address"/>
										<Input id="eaddress" enabled="false" value="add address here"/>
										<Label text="Coding Code Group"/>
										<Input id="ccgrp" enabled="false" value="RPDS"/>
										<Label text="Item Code Group"/>
										<Input id="igrp" enabled="false" value="RP010"/>
										<Label text="Cause Code Group"/>
										<Input id="cagrp" showValueHelp="true" enabled="false" value="RPRESULT"/>
									</VBox>
								</HBox>
								<HBox>
									<VBox>
										<Label text="Equipment"/>
										<Input id="equip" showValueHelp="true" valueHelpRequest=".onValueHelpRequest" value="{tempModel>/argsEquip}"/>
										<Label text="Priority"/>
										<Input id="pri" showValueHelp="true" valueHelpRequest=".onValueHelpRequest" value="{tempModel>/argsPri}"/>
										<Label text="Coding Code"/>
										<Input id="ccode" showValueHelp="true" valueHelpRequest=".onValueHelpRequest" value="{tempModel>/argsCode}"/>
										<Label text="Item Code"/>
										<Input id="icode" showValueHelp="true" valueHelpRequest=".onValueHelpRequest" value="001"/>
										<Label text="Cause Code"/>
										<Input id="cacode" showValueHelp="true" valueHelpRequest=".onValueHelpRequest" value="TOS"/>
									</VBox>
								</HBox>
								<HBox>
									<VBox>
										<Label text="Created By"/>
										<Input id="cuser" enabled="false" value="{tempModel>/argUser}"/>
										<Label text="Notification Date"/>
										<DatePicker id="date" enabled="false" valueFormat="yyyy-MM-dd" displayFormat="long" class="sapUiSmallMarginBottom"/>
										<Label text="Sold-To Business Partner"/>
										<Input id="cust" showValueHelp="true" valueHelpRequest=".onValueHelpRequest" value="{tempModel>/argsCust}"/>
									</VBox>
								</HBox>
							</f:content>
						</f:SimpleForm>
					</VBox>
				</content>
				<footer>
					<OverflowToolbar id="otbFooter">
						<ToolbarSpacer/>
						<Button type="Accept" text="Save" press="createInv"></Button>
						<Button type="Reject" text="Cancel"></Button>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>
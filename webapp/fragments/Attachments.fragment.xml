	<FlexBox alignItems="Start" justifyContent="End">
		<Button text="New Attachment" press="newAttachment" ariaLabelledBy="editButtonLabel" tooltip="Add New Attachment"/>
	</FlexBox>
	<Table id="atttable" width="auto" items="{toAttachments}" updateFinished="onListUpdateFinished">
		<headerToolbar>
			<Toolbar>
				<ToolbarSpacer/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column id="atcol">
				<Text text="Document Id" id="docid"/>
			</Column>
			<Column>
				<Text text="Document Name" id="doname"/>
			</Column>
			<!--<Column>-->
			<!--	<Text text="Document Description" id="dodsc"/>-->
			<!--</Column>-->
			<Column>
				<Text text="Document Type" id="dotyp"/>
			</Column>
			<Column>
				<Text text="Document Date" id="ddate"/>
			</Column>
			<Column>
				<Text text="Document Creator" id="docre"/>
			</Column>
			<!--	<Column>-->
			<!--		<Text text="Document URL" id="dourl"/>-->
			<!--	</Column>-->
		</columns>
		<items>
			<ColumnListItem type="Navigation" press="onPressAttachment">
				<cells>
					<ObjectIdentifier title="{Docid}"/>
				</cells>
				<cells>
					<Text text="{Docname}"/>
				</cells>
			<!--	<cells>
					<Text text="{Docdesc}"/>
				</cells>-->
				<cells>
					<Text text="{Doctype}"/>
				</cells>
				<cells>
					<Text text="{ path: 'Docdate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' } }"/>
				</cells>
				<cells>
					<Text text="{Doccreator}"/>
				</cells>
				<!--<cells>-->
				<!--	<Text text="{Docuri}"/>-->
				<!--</cells>-->
			</ColumnListItem>
		</items>
	</Table>

<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:Table="sap.ui.table">
	<Table id="acttable" width="auto" items="{toActivities}" updateFinished="onListUpdateFinished">
		<headerToolbar>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="New Activity" press="newActivity" ariaLabelledBy="editButtonLabel" tooltip="Set Status"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column id="actcol">
				<Text text="Activity" id="acti"/>
			</Column>
			<Column>
				<Text text="Activty Type" id="actr"/>
			</Column>
			<Column>
				<Text text="Activity Code" id="actq"/>
			</Column>
			<Column>
				<Text text="Amount" id="actp"/>
			</Column>
			<Column>
				<Text text="Amount Remaining" id="arem"/>
			</Column>
			<Column>
				<Text text="Date" id="actl"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Navigation" press="onPressActivity">
				<cells>
					<ObjectIdentifier title="{Activityno}"/>
				</cells>
				<cells>
					<Text text="{Activitycodetxt}"/>
				</cells>
				<cells>
					<Text text="{Activitycode}"/>
				</cells>
				<cells>
					<Text text="{Activitytxt}"/>
				</cells>
				<cells>
					<Text text="{Activityamtrem}"/>
				</cells>
				<cells>
					<Text text="{ path: 'Activitystrdate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' } }"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>
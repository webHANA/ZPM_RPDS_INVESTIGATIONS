<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog id="openDialog" title="Enter Your Data">
		<VBox class="sapUiSmallMargin">
			<f:SimpleForm id="noteForm" editable="true" layout="ResponsiveGridLayout" afterClose="dialogAfterClose" title="{Notifid}">
				<f:content>
					<Label text="Add Note"/>
					<TextArea id="hnote" maxLength="1000" showExceededText="true" />
				</f:content>
			</f:SimpleForm>
		</VBox>
		<beginButton>
			<Button text="Add" press="createNote"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="closePartner"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>